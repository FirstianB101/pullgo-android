<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/lesson_info_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="24dp"
    android:padding="24dp"
    tools:context=".ui.dialog.FragmentLessonInfoDialog">

    <TextView
        android:id="@+id/textViewLessonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/calendar_lesson_dialog_text_size"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="수업 이름"/>

    <TextView
        android:id="@+id/textViewClassroomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/calendar_lesson_dialog_text_size"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="반 이름"/>

    <TextView
        android:id="@+id/textViewLessonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/calendar_lesson_dialog_text_size"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="수업 날짜"/>

    <TextView
        android:id="@+id/textViewLessonTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/calendar_lesson_dialog_text_size"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="수업 시간"/>



</LinearLayout>