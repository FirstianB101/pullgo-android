<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextAddQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/input_question"
                android:lines="5"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="5dp"
                android:textColor="@android:color/holo_orange_dark"
                android:text="@string/comment_click_under_image_for_register"/>

            <ImageView
                android:id="@+id/imageViewAddQuestion"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/add_picture" />

            <Button
                android:id="@+id/buttonShowAddMultipleChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/add_choice"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonAddQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/baseline_check_white_18dp" />
    </FrameLayout>

</LinearLayout>