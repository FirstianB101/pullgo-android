<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/lesson_info_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="24dp"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="학원 이름"/>

        <TextView
            android:id="@+id/textViewLessonInfoAcademyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="정보를 불러올 수 없습니다"
            android:textSize="17sp"
            android:padding="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="수업 이름"/>

        <TextView
            android:id="@+id/textViewLessonInfoLessonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:padding="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="수업 날짜"/>

        <TextView
            android:id="@+id/textViewLessonInfoLessonDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="수업 시간"/>

        <TextView
            android:id="@+id/textViewLessonInfoLessonTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="17sp"
            android:padding="10dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>