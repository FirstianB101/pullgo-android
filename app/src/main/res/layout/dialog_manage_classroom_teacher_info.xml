<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="24dp"
    android:padding="24dp"
    android:background="@drawable/rounded"
    tools:context=".ui.dialog.FragmentLessonInfoDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:src="@drawable/outline_info_24"
            android:layout_gravity="center"
            app:tint="@color/main_color_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/main_color_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:text="선생님 정보"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="@dimen/manage_classroom_student_dialog_textview_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="선생님 이름"/>

        <TextView
            android:id="@+id/textViewManageClassroomTeacherName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:text="선생님 이름"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="@dimen/manage_classroom_student_dialog_textview_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="선생님 ID"/>

        <TextView
            android:id="@+id/textViewManageClassroomTeacherID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:text="선생님 ID"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="@dimen/manage_classroom_student_dialog_textview_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:text="전화번호"/>

        <TextView
            android:id="@+id/textViewManageClassroomTeacherPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/calendar_lesson_dialog_text_size"
            android:text="전화번호"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonManageClassroomKickTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/underlined_manage_classroom_kick_student"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/material_700_red"
        android:layout_margin="10dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/white"/>

</LinearLayout>